<?xml version="1.0"?>
<launch>

  <arg name="paused" default="false"/>
  <arg name="kinect_name" default="kinect"/>
  <arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>

  <!-- send cob urdf to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find robotino_bringup)/robots/$(arg robot)/urdf/robotino.urdf.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" type="string" value="" />
  </node>

    <!--node name="joint_state_publisher_fake" pkg="joint_state_publisher" type="joint_state_publisher" output="screen">
        <remap from="robot_description" to="/robot_description" />
        <rosparam param="source_list">[/arm_controller/joint_states, /base_controller/joint_states, /rotatory_controller/joint_states]</rosparam>
    </node-->

  <node name="tf_odomp" pkg="robotino_bringup_sim" type="odomp_frame.py" respawn="false" output="screen" />

  <include file="$(find robotino_controller_configuration_gazebo)/launch/joint_state_controller.launch" />

  <include file="$(find robotino_controller_configuration_gazebo)/launch/base_controller.launch" />

  <include file="$(find robotino_controller_configuration_gazebo)/launch/rotatory_controller.launch" />

  <include file="$(find robotino_controller_configuration_gazebo)/launch/arm_controller.launch" >
    <arg name="use_velocity_controller" value="true"/>
  </include>

</launch>
